@page "/informaticsClub/equation-solver"
@inject IStringLocalizer<Resources.InformaticsClub.Lang> localizer

<div class="container p-3">
    <HxCard CssClass="shadow mt-5">
        <HeaderTemplate>
            <h2 class="card-title">@localizer["project3.heading"]</h2>
        </HeaderTemplate>
        <BodyTemplate>
            <h1 class="my-5 text-center">
                <input class="text-center" type="number" @bind="a" placeholder="a" style="width:20%;">
                X +
                <input class="text-center" type="number" @bind="b" placeholder="b" style="width:20%;">
                = 0
            </h1>
            @if (Result != null)
            {

                <h1 class="my-5 text-center">@Result</h1>
            }
            <div class="text-center my-2">
                <HxButton class="btn btn-dark" OnClick="Solve">@localizer["project3.button"]</HxButton>
            </div>
        </BodyTemplate>
    </HxCard>
</div>

@code {
    int? a = null;
    int? b = null;
    string? Result = null;


    void Solve()
    {
        if (a == null)
        {
            Result = localizer.GetString("project3.result1");
            return;
        }
        if (a == 0)
        {
            Result = localizer.GetString("project3.result2");
            return;
        }
        if (b == null)
        {
            Result = localizer.GetString("project3.result3");
            return;
        }

        Result = $"X = - {b} / {a} = {((float)-b / a)?.ToString("N2")}";

    }
}
